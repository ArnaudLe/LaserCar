<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.arnaud.lasercar.GameSettingsActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/gamesettings_hint_pseudo"
        android:id="@+id/et_pseudo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/gamesettings_player"
        android:id="@+id/tv_player"
        android:textColor="@color/black"
        android:layout_below="@+id/et_pseudo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-13dp"/>

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/np_player"
        android:layout_below="@+id/tv_player"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/gamesettings_time"
        android:id="@+id/tv_time"
        android:textColor="@color/black"
        android:layout_above="@+id/rg_players"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rg_players"
        android:checkedButton="@+id/rb_5minutes"
        android:layout_above="@+id/btn_validate"
        android:layout_marginBottom="18dp"
        android:layout_centerHorizontal="true">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gamesettings_5minutes"
            android:id="@+id/rb_5minutes"
            android:buttonTint="@color/red" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gamesettings_7minutes"
            android:id="@+id/rb_7minutes"
            android:buttonTint="@color/red"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gamesettings_10minutes"
            android:id="@+id/rb_10minutes"
            android:buttonTint="@color/red"/>
    </RadioGroup>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gamesettings_validate"
        android:id="@+id/btn_validate"
        android:onClick="sendData"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@color/red"
        android:textSize="17sp"
        android:textStyle="bold" />



</RelativeLayout>
