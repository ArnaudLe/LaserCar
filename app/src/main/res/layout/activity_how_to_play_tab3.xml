<?xml version="1.0" encoding="utf-8"?>


<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.arnaud.lasercar.HowToPlayActivity"
        android:orientation="vertical"
        android:id="@+id/tabsLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/howtoplay3_title"
            android:id="@+id/textView"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:paddingBottom="5dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_howtoplay1"
            android:layout_alignParentTop="false"
            android:src="@drawable/img_howtoplay1"
            android:adjustViewBounds="true"
            android:paddingBottom="15dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_howtoplay2"
            android:layout_alignParentTop="false"
            android:src="@drawable/img_howtoplay2"
            android:adjustViewBounds="true"
            android:paddingBottom="15dp" />


    </LinearLayout>

</ScrollView>
